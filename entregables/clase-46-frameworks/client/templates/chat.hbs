<div class="container messages">
  {{#if messages}}
    {{#each messages}}
      <div class="container d-flex">
        <img class="img-fluid avatar" src={{author.avatar}}>
        <p class="text-danger"><b
            class="text-primary"
          >{{sender}} </b>[{{date}}] :
          <em class="text-success">{{message}}</em></p>
      </div>
    {{/each}}
  {{/if}}
</div>