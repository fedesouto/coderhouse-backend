doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous")
        title Document
    body 
        nav.navbar.navbar-expand-lg.bg-light
            .container-fluid
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/') Formulario
                    li.nav-item
                        a.nav-link(href='/productos') Productos
        div(class="container")
            if !products
                h1(class="text-center mt-5") No hay productos.
            else
                table(class="table")
                    thead
                        tr 
                            th(scope="col") ID
                            th(scope="col") Title
                            th(scope="col") Price
                            th(scope="col") Thumbnail 
                    tbody 
                        each product in products
                            tr
                                th(scope="row")=product.id 
                                td=product.title 
                                td $ #{product.price} 
                                td(class="text-center"): img(src=product.thumbnail style="max-height: 25px; max-width: auto")